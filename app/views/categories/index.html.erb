<center><%= render 'shared/page_title', title: "Available Categories" %></center>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |cat| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="user-title"><%= link_to cat.name.capitalize, category_path(cat) %></li>
  <li><small><%= pluralize(cat.articles.count, "article") if cat.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Edit this category", edit_category_path(cat) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
  </div>