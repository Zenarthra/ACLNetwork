

<div class="well col-md-8 col-md-offset-2">
  <la><%= render 'shared/page_title', title: @article.name %></la>
  <hr />
  
  <%= simple_format(@article.description) %>
  <hr />
  <div class="pull-right">
    <createdby><p class="center">
      <em>Created by:</em>
    </p>
    <p class="center">
      <%= link_to gravatar_for(@article.user), article_path %>
    </p>
    <p class="center">
      <small><%= @article.user.author.capitalize %></small>
      <div class="pull-right"><%= time_ago_in_words(@article.created_at) %> ago</div>
    </p></createdby>
  </div>
  
  <div class="article-actions">
  <%= link_to "Edit this article", edit_article_path(@article), 

                                                class: 'btn btn-xs btn-warning' %>
  <%= link_to "Delete this article", article_path(@article), method: :delete,
                                    data: { confirm: "Are you sure you want to delete?" },
                                    class: "btn btn-xs btn-danger" %>
</div>  
  
</div>